<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Survival.SurvivalPage"
             Title="Survival Tools">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Light Button -->
            <Border Style="{StaticResource TileBorder}" Padding="20"
                    HorizontalOptions="Fill" HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="&#xf0eb;" 
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="#888888"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Light" FontSize="Medium" TextColor="#888888"/>
                        <Label Text="Turn on your flashlight, including SOS and emergency signaling modes." 
                               FontSize="12" LineBreakMode="WordWrap" TextColor="#888888"/>
                    </VerticalStackLayout>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLightTapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!-- Compass Button -->
            <Border Style="{StaticResource TileBorder}" Padding="20"
                    HorizontalOptions="Fill" HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="&#xf14e;" 
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="#888888"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Compass" FontSize="Medium" TextColor="#888888"/>
                        <Label Text="Find directions easily using your device's built-in compass sensor." 
                               FontSize="12" LineBreakMode="WordWrap" TextColor="#888888"/>
                    </VerticalStackLayout>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCompassTapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!-- Movement Detector -->
            <Border Style="{StaticResource TileBorder}" Padding="20"
                    HorizontalOptions="Fill" HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="&#xf2f2;" 
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="#888888"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Movement Detector" FontSize="Medium" TextColor="#888888"/>
                        <Label Text="Protect your tent or bag with an alarm when motion is detected." 
                               FontSize="12" LineBreakMode="WordWrap" TextColor="#888888"/>
                    </VerticalStackLayout>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMovementDetectorTapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!-- Mark Point -->
            <Border Style="{StaticResource TileBorder}" Padding="20"
                    HorizontalOptions="Fill" HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="&#xf041;" 
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="#888888"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Mark Point" FontSize="Medium" TextColor="#888888"/>
                        <Label Text="Save your current location so you can return later." 
                               FontSize="12" LineBreakMode="WordWrap" TextColor="#888888"/>
                    </VerticalStackLayout>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMarkPointTapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!-- Checklist -->
            <Border Style="{StaticResource TileBorder}" Padding="20"
                    HorizontalOptions="Fill" HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="&#xf0ae;" 
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="#888888"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Checklist" FontSize="Medium" TextColor="#888888"/>
                        <Label Text="Plan and check your gear before departure." 
                               FontSize="12" LineBreakMode="WordWrap" TextColor="#888888"/>
                    </VerticalStackLayout>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnChecklistTapped"/>
                </Border.GestureRecognizers>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
