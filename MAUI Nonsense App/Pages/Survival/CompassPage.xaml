<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Survival.CompassPage"
             Title="Compass"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- GraphicsView for Compass -->
        <GraphicsView x:Name="CompassGraphics"
                      HeightRequest="300"
                      WidthRequest="300"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      Drawable="{Binding Drawable}" />

        <!-- Heading -->
        <Label x:Name="HeadingLabel"
               Text="0Â° N"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="Black"/>

        <!-- Coordinates -->
        <Label x:Name="CoordinatesLabel"
               Text="Lat: 0.0000, Lon: 0.0000"
               FontSize="14"
               HorizontalOptions="Center"
               TextColor="Black"/>

        <!-- Calibration Status -->
        <Label x:Name="CalibrationStatusLabel"
               Text="Calibration: Unknown"
               FontSize="14"
               HorizontalOptions="Center"
               TextColor="Red"/>

        <!-- Recalibrate Button -->
        <Button Text="Recalibrate Compass"
                Clicked="OnRecalibrateClicked"
                HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
