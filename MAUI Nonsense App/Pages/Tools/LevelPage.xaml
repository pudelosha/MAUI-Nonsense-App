<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:graphics="clr-namespace:Microsoft.Maui.Graphics;assembly=Microsoft.Maui.Graphics"
             x:Class="MAUI_Nonsense_App.Pages.Tools.LevelPage"
             Title="Level">

    <ContentPage.Content>
        <VerticalStackLayout BackgroundColor="White" Padding="20" Spacing="20">
            <GraphicsView x:Name="LevelCanvas"
                          HeightRequest="300"
                          WidthRequest="300"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <GraphicsView x:Name="HorizontalBubbleCanvas"
                              HeightRequest="50"
                              WidthRequest="200"/>
                <GraphicsView x:Name="VerticalBubbleCanvas"
                              HeightRequest="200"
                              WidthRequest="50"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
