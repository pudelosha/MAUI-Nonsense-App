<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Tools.RulerPage"
             Title="Ruler">

    <Grid>
        <!-- Left and right rulers -->
        <GraphicsView x:Name="LeftRuler" WidthRequest="40" HorizontalOptions="Start" />
        <GraphicsView x:Name="RightRuler" WidthRequest="40" HorizontalOptions="End" />

        <!-- Toggle at bottom -->
        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="End" Spacing="10">
            <Label Text="{Binding UnitToggleText}" VerticalOptions="Center" />
            <Switch IsToggled="{Binding UseInches}" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
