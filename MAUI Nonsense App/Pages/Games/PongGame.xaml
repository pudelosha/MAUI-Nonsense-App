<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Games.PongGame"
             Title="Pong">

    <Grid RowDefinitions="7*,3*" Padding="20">

        <!-- Playfield (no outer frame) -->
        <GraphicsView x:Name="PongCanvas"
                      Grid.Row="0"
                      BackgroundColor="Transparent">
            <GraphicsView.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnPan" />
            </GraphicsView.GestureRecognizers>
        </GraphicsView>

        <!-- Controls -->
        <VerticalStackLayout Grid.Row="1" Spacing="12" HorizontalOptions="FillAndExpand">

            <!-- Scores -->
            <Grid ColumnDefinitions="*,*" HorizontalOptions="FillAndExpand">
                <Label Grid.Column="0"
                       Text="{Binding PlayerScore, StringFormat='Player: {0}'}"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Start" />
                <Label Grid.Column="1"
                       Text="{Binding CpuScore, StringFormat='CPU: {0}'}"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="End" />
            </Grid>

            <!-- Up / Down -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" HorizontalOptions="FillAndExpand">
                <Button Grid.Column="0" Text="⬆ Up"   Clicked="OnUp"   HorizontalOptions="Fill" />
                <Button Grid.Column="1" Text="⬇ Down" Clicked="OnDown" HorizontalOptions="Fill" />
            </Grid>

            <!-- Pause / Start -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" HorizontalOptions="FillAndExpand">
                <Button Grid.Column="0" Text="Pause" Clicked="OnPause" HorizontalOptions="Fill" />
                <Button Grid.Column="1" Text="Start" Clicked="OnStart" HorizontalOptions="Fill" />
            </Grid>

            <!-- Tiny tip -->
            <Label Text="Tip: best with your finger — drag on the board. Buttons also work."
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
