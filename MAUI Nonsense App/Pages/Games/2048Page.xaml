<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Games._2048Page"
             Title="2048">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Shared palette -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>

            <!-- Grey card -->
            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
                <Setter Property="Padding" Value="16" />
            </Style>

            <!-- Pale rounded buttons -->
            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <Style x:Key="SmallPrimaryBold" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
            </Style>
            <Style x:Key="TinySecondary" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="16" Spacing="16">

        <!-- PLAYFIELD (wrapped in a grey frame) -->
        <Frame>
            <GraphicsView x:Name="GameCanvas"
                          HeightRequest="320"
                          BackgroundColor="Transparent">
                <GraphicsView.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Up"    Swiped="OnSwipe" />
                    <SwipeGestureRecognizer Direction="Down"  Swiped="OnSwipe" />
                    <SwipeGestureRecognizer Direction="Left"  Swiped="OnSwipe" />
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnSwipe" />
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
        </Frame>

        <!-- CONTROLS (separate grey card) -->
        <Frame>
            <VerticalStackLayout Spacing="12" HorizontalOptions="FillAndExpand">

                <!-- Score / Best -->
                <Grid ColumnDefinitions="*,*" HorizontalOptions="FillAndExpand">
                    <Label Grid.Column="0"
                           Text="{Binding Score, StringFormat='Score: {0}'}"
                           Style="{StaticResource SmallPrimaryBold}"
                           HorizontalTextAlignment="Start" />
                    <Label Grid.Column="1"
                           Text="{Binding Best, StringFormat='Best: {0}'}"
                           Style="{StaticResource SmallPrimaryBold}"
                           HorizontalTextAlignment="End" />
                </Grid>

                <!-- Up -->
                <Grid ColumnDefinitions="*" ColumnSpacing="12" HorizontalOptions="FillAndExpand">
                    <Button Grid.Column="0"
                            Text="⬆ Up"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnUpClicked" />
                </Grid>

                <!-- Left / Down / Right -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12" HorizontalOptions="FillAndExpand">
                    <Button Grid.Column="0"
                            Text="⬅ Left"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnLeftClicked" />
                    <Button Grid.Column="1"
                            Text="⬇ Down"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnDownClicked" />
                    <Button Grid.Column="2"
                            Text="Right ➡"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnRightClicked" />
                </Grid>

                <!-- Start -->
                <Grid ColumnDefinitions="*" ColumnSpacing="12" HorizontalOptions="FillAndExpand">
                    <Button Grid.Column="0"
                            Text="Start"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnStartClicked" />
                </Grid>

                <!-- Tip -->
                <Label Text="Tip: best with your finger — swipe on the board. Buttons also work."
                       Style="{StaticResource TinySecondary}"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
