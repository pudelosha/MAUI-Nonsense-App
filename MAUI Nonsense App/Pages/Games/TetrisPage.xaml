<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Games.TetrisPage"
             Title="Tetris">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Shared palette -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="BorderCol">#E5E7EB</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>

            <!-- App card style -->
            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

            <!-- Pale rounded buttons -->
            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <Style x:Key="SmallPrimaryBold" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
            </Style>
            <Style x:Key="SmallSecondary" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Keep 70/30 layout -->
    <Grid RowDefinitions="7*,3*" Padding="16" RowSpacing="16">

        <!-- PLAYFIELD (no frame/border) -->
        <GraphicsView x:Name="TetrisCanvas"
                      Grid.Row="0"
                      BackgroundColor="#FAFAFA">
            <GraphicsView.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Left"  Swiped="OnSwipe" />
                <SwipeGestureRecognizer Direction="Right" Swiped="OnSwipe" />
                <SwipeGestureRecognizer Direction="Down"  Swiped="OnSwipe" />
            </GraphicsView.GestureRecognizers>
        </GraphicsView>

        <!-- CONTROLS (single grey card) -->
        <Frame Grid.Row="1">
            <VerticalStackLayout Spacing="12">

                <!-- Score / Level -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Label Grid.Column="0"
                           Text="{Binding Score, StringFormat='Score: {0}'}"
                           Style="{StaticResource SmallPrimaryBold}"
                           HorizontalTextAlignment="Start" />
                    <Label Grid.Column="1"
                           Text="{Binding Level, StringFormat='Level: {0}'}"
                           Style="{StaticResource SmallPrimaryBold}"
                           HorizontalTextAlignment="End" />
                </Grid>

                <!-- Move / Rotate -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                    <Button Grid.Column="0"
                            Text="⟸"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnMoveLeftClicked" />
                    <Button Grid.Column="1"
                            Text="⟳"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnRotateClicked" />
                    <Button Grid.Column="2"
                            Text="⟹"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnMoveRightClicked" />
                </Grid>

                <!-- Drop / Pause / Start -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                    <Button Grid.Column="0"
                            Text="⬇ Drop"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnDropClicked" />
                    <Button Grid.Column="1"
                            Text="Pause"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnPauseClicked" />
                    <Button Grid.Column="2"
                            Text="Start"
                            Style="{StaticResource PillGrey}"
                            Clicked="OnStartClicked" />
                </Grid>

            </VerticalStackLayout>
        </Frame>

    </Grid>
</ContentPage>
