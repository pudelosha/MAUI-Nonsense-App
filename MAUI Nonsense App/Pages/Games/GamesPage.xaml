<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Nonsense_App.Pages.GamesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Games">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- same pale-gray theme as Activity page -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="BorderCol">#E5E7EB</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>

            <!-- identical Frame styling to Activity page -->
            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- Snake -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf4d7;" FontFamily="FASolid" FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Snake" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Guide the snake, eat food, don't hit walls or yourself."
                               FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSnakeTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Tetris -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf009;" FontFamily="FASolid" FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Tetris" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Fit falling blocks to clear lines and score."
                               FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTetrisTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Arkanoid / Breakout -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf61f;" FontFamily="FASolid" FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Arkanoid" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Bounce the ball with the paddle to break all bricks."
                               FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnArkanoidTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Pong -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf45d;" FontFamily="FASolid" FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Pong" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Classic paddle vs. paddle. Keep the ball in play."
                               FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPongTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Space Invaders -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf135;" FontFamily="FASolid" FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Space Invaders" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Move and shoot to stop the advancing alien waves."
                               FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSpaceInvadersTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- 2048 -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf00a;" FontFamily="FASolid" FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="2048" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Slide tiles to merge numbers and reach 2048."
                               FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="On2048Tapped"/>
                </Frame.GestureRecognizers>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
