<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Random.RouletteWheelPage"
             Title="Roulette Wheel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>

            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
                <Setter Property="Padding" Value="16" />
            </Style>

            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="16" Spacing="16">

        <!-- Wheel (no frame) -->
        <GraphicsView x:Name="WheelCanvas"
                      HeightRequest="300"
                      HorizontalOptions="Fill"
                      VerticalOptions="FillAndExpand" />

        <!-- Controls in grey card -->
        <Frame>
            <VerticalStackLayout Spacing="12">

                <!-- Result (fixed text) -->
                <Label x:Name="ResultLabel"
                       Text="Result: -"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       TextColor="{StaticResource TextPrimary}" />

                <!-- Spin button -->
                <Button Text="Spin Ball"
                        Style="{StaticResource PillGrey}"
                        Clicked="OnSpinClicked" />

                <!-- Layout toggle -->
                <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="12" HorizontalOptions="Center">
                    <Label Grid.Column="0"
                           Text="European"
                           VerticalOptions="Center"
                           TextColor="{StaticResource TextSecondary}" />
                    <Switch Grid.Column="1"
                            x:Name="LayoutToggle"
                            Toggled="OnLayoutToggled" />
                    <Label Grid.Column="2"
                           Text="American"
                           VerticalOptions="Center"
                           TextColor="{StaticResource TextSecondary}" />
                </Grid>

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
