<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Random.RouletteWheelPage"
             Title="Roulette Wheel">
    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Canvas for wheel and ball -->
        <GraphicsView x:Name="WheelCanvas" HeightRequest="300"/>

        <!-- Spin Result -->
        <Label x:Name="ResultLabel"
               Text="Result: "
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Spin Button -->
        <Button Text="Spin Ball" Clicked="OnSpinClicked" />

        <!-- Layout Toggle -->
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="European" VerticalOptions="Center" />
            <Switch x:Name="LayoutToggle" Toggled="OnLayoutToggled" />
            <Label Text="American" VerticalOptions="Center" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
