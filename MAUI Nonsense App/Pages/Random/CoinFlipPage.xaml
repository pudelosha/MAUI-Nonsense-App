<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Random.CoinFlipPage"
             Title="Coin Flip">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Coin canvas -->
        <GraphicsView x:Name="CoinCanvas"
                      HeightRequest="300"
                      HorizontalOptions="Center" />

        <!-- Result label -->
        <Label x:Name="ResultLabel"
               Text="Result: "
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Toss button -->
        <Button Text="Toss Coin"
                Clicked="OnTossClicked" />

        <!-- Split stats -->
        <Label Text="Heads/Tails Split:"
               FontSize="16"
               FontAttributes="Bold"
               TextColor="#444" />

        <Label x:Name="SplitLabel"
               Text="0% Heads, 0% Tails"
               FontSize="14"
               TextColor="#444" />

        <!-- Last results -->
        <Label Text="Last 5 Results:"
               FontSize="16"
               FontAttributes="Bold"
               TextColor="#444" />

        <Label x:Name="LastResultsLabel"
               Text="-"
               FontSize="14"
               LineBreakMode="WordWrap"
               TextColor="#444" />
    </VerticalStackLayout>
</ContentPage>
