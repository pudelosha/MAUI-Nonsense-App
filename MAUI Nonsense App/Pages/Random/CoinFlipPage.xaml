<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Random.CoinFlipPage"
             Title="Coin Flip">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Coin canvas -->
        <GraphicsView x:Name="CoinCanvas" HeightRequest="250" />

        <!-- Toss button -->
        <Button Text="Toss Coin" Clicked="OnTossClicked" />

        <!-- Result label -->
        <Label x:Name="ResultLabel" 
               Text="Result will appear here"
               FontAttributes="Bold"
               FontSize="Medium"
               HorizontalOptions="Center" />

        <!-- Stats -->
        <Label Text="Heads/Tails Split:" FontAttributes="Bold" />
        <Label x:Name="SplitLabel" Text="0% Heads, 0% Tails" />

        <Label Text="Last 5 Results:" FontAttributes="Bold" />
        <Label x:Name="LastResultsLabel" Text="-" LineBreakMode="WordWrap" />

    </VerticalStackLayout>
</ContentPage>
