<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Nonsense_App.Pages.Random.CoinFlipPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Coin Flip">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- shared palette -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>
            <Color x:Key="BtnBgActive">#D1D5DB</Color>

            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
                <Setter Property="Padding" Value="16" />
            </Style>

            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <Style x:Key="SectionTitle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- COIN (no frame around it) -->
            <GraphicsView x:Name="CoinCanvas"
                          HeightRequest="300"
                          WidthRequest="300"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />

            <!-- RESULT -->
            <Frame>
                <VerticalStackLayout Spacing="6">
                    <Label Text="Result" Style="{StaticResource SectionTitle}" />
                    <Label x:Name="ResultLabel"
                           Text="â€”"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />
                </VerticalStackLayout>
            </Frame>

            <!-- TOSS BUTTON -->
            <Button x:Name="TossBtn"
                    Text="Toss Coin"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnTossClicked" />

            <!-- SPLIT -->
            <Frame>
                <VerticalStackLayout Spacing="6">
                    <Label Text="Heads/Tails Split" Style="{StaticResource SectionTitle}" />
                    <Label x:Name="SplitLabel"
                           Text="0% Heads, 0% Tails"
                           FontSize="14"
                           TextColor="{StaticResource TextPrimary}" />
                </VerticalStackLayout>
            </Frame>

            <!-- LAST RESULTS -->
            <Frame>
                <VerticalStackLayout Spacing="6">
                    <Label Text="Last 5 Results" Style="{StaticResource SectionTitle}" />
                    <Label x:Name="LastResultsLabel"
                           Text="-"
                           FontSize="14"
                           LineBreakMode="WordWrap"
                           TextColor="{StaticResource TextPrimary}" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
