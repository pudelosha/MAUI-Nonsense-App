<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Nonsense_App.Pages.Random.CoinFlipPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Coin Flip">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- shared palette -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>
            <Color x:Key="BtnBgActive">#D1D5DB</Color>

            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
                <Setter Property="Padding" Value="16" />
            </Style>

            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <!-- Header style to match "Result: -" -->
            <Style x:Key="SectionHeader" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- COIN (no frame around it) -->
            <GraphicsView x:Name="CoinCanvas"
                          HeightRequest="300"
                          WidthRequest="300"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />

            <!-- RESULT (single fixed label) -->
            <Frame>
                <Label x:Name="ResultLabel"
                       Text="Result: -"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       TextColor="{StaticResource TextPrimary}" />
            </Frame>

            <!-- TOSS BUTTON -->
            <Button x:Name="TossBtn"
                    Text="Toss Coin"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnTossClicked" />

            <!-- DETAILS: Split + Last results in ONE frame -->
            <Frame>
                <VerticalStackLayout Spacing="10">

                    <!-- Split -->
                    <Label Text="Heads/Tails Split" Style="{StaticResource SectionHeader}" />
                    <Label x:Name="SplitLabel"
                           Text="0% Heads, 0% Tails"
                           FontSize="14"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource TextPrimary}" />

                    <!-- subtle divider -->
                    <BoxView HeightRequest="1"
                             Opacity="0.12"
                             BackgroundColor="{StaticResource TextSecondary}" />

                    <!-- Last results -->
                    <Label Text="Last 5 Results" Style="{StaticResource SectionHeader}" />
                    <Label x:Name="LastResultsLabel"
                           Text="-"
                           FontSize="14"
                           LineBreakMode="WordWrap"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource TextPrimary}" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
