<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Random.DicePage"
             Title="Dice">

    <Grid RowDefinitions="7*,3*" Padding="20">
        <!-- 70% height area -->
        <GraphicsView x:Name="DiceCanvas"
                      Grid.Row="0"
                      BackgroundColor="LightGray" />

        <!-- 30% control panel -->
        <VerticalStackLayout Grid.Row="1" Spacing="15">
            <!-- Dice controls -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="-" Clicked="OnDecreaseClicked" />
                <Label x:Name="DiceCountLabel" Text="1 Dice" FontAttributes="Bold" VerticalOptions="Center" />
                <Button Text="+" Clicked="OnIncreaseClicked" />
            </HorizontalStackLayout>

            <!-- Roll Button -->
            <Button Text="Roll Dices" Clicked="OnRollClicked" />

            <!-- Result -->
            <Label x:Name="ResultLabel"
                   Text="Result: "
                   FontAttributes="Bold"
                   FontSize="Medium"
                   HorizontalOptions="Center" />

            <!-- Sum -->
            <Label x:Name="SumLabel"
                   Text="Sum: "
                   FontAttributes="Bold"
                   FontSize="Medium"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
