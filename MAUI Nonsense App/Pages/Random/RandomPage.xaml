<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Random.RandomPage"
             Title="Random">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Random Number Generator -->
            <Border Style="{StaticResource TileBorder}" Padding="20"
                    HorizontalOptions="Fill" HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="&#xf522;" 
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="#888888"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Random Number Generator" FontSize="Medium" TextColor="#888888"/>
                        <Label Text="Generate a random number between your chosen range."
                               FontSize="12" LineBreakMode="WordWrap" TextColor="#888888"/>
                    </VerticalStackLayout>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRandomNumberTapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!-- Coin Flip -->
            <Border Style="{StaticResource TileBorder}" Padding="20"
                    HorizontalOptions="Fill" HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="&#xf24e;" 
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="#888888"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Coin Flip" FontSize="Medium" TextColor="#888888"/>
                        <Label Text="Flip a virtual coin and get heads or tails."
                               FontSize="12" LineBreakMode="WordWrap" TextColor="#888888"/>
                    </VerticalStackLayout>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCoinFlipTapped"/>
                </Border.GestureRecognizers>
            </Border>

            <!-- Dice -->
            <Border Style="{StaticResource TileBorder}" Padding="20"
                    HorizontalOptions="Fill" HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="&#xf522;" 
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="#888888"
                           VerticalOptions="Center"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Dice" FontSize="Medium" TextColor="#888888"/>
                        <Label Text="Roll one or more dice and get a random result."
                               FontSize="12" LineBreakMode="WordWrap" TextColor="#888888"/>
                    </VerticalStackLayout>
                </Grid>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDiceTapped"/>
                </Border.GestureRecognizers>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
