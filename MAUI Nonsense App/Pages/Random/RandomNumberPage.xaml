<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Random.RandomNumberPage"
             Title="Random Numbers">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Label for range -->
        <Label Text="Range (From - To)" FontAttributes="Bold" />

        <!-- Row: From / To full width -->
        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
            <Entry Grid.Column="0" Text="{Binding From}" Keyboard="Numeric" Placeholder="From" />
            <Entry Grid.Column="1" Text="{Binding To}" Keyboard="Numeric" Placeholder="To" />
        </Grid>

        <!-- Label for count -->
        <Label Text="Count of generated numbers" FontAttributes="Bold" />

        <!-- Row: Count / +/- full width -->
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
            <Label Grid.Column="0" Text="Count:" VerticalOptions="Center" />
            <Label Grid.Column="1" Text="{Binding Count}" VerticalOptions="Center" HorizontalOptions="Center" />
            <Stepper Grid.Column="2"
                     Value="{Binding Count}"
                     Minimum="1"
                     Maximum="100"
                     Increment="1" />
        </Grid>

        <!-- Row: Allow duplicates -->
        <HorizontalStackLayout>
            <CheckBox IsChecked="{Binding AllowDuplicates}" IsEnabled="{Binding CanAllowDuplicates}" />
            <Label Text="Allow duplicates" VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Button -->
        <Button Text="Generate" Command="{Binding GenerateCommand}" />

        <!-- Output -->
        <Editor Text="{Binding Result}" HeightRequest="100" IsReadOnly="True" />
    </VerticalStackLayout>
</ContentPage>
