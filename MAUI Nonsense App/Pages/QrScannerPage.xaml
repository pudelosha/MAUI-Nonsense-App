<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.QrScannerPage"
             Title="QrScannerPage">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="QR Code Scanner" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Start Scanning" Command="{Binding ScanCommand}" />
        <Label Text="{Binding Result}" FontSize="18" HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>