<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageToPdfPage"
             Title="PDF Documents">

    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- NEW button -->
        <Button Text="New PDF"
                Clicked="OnNewPdfClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="8"
                HorizontalOptions="Fill" />

        <!-- Spacer -->
        <BoxView HeightRequest="10" />

        <!-- PDF List -->
        <CollectionView x:Name="PdfListView"
                        ItemsSource="{Binding PdfDocuments}"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" CornerRadius="8" Padding="10" Margin="0,5">
                        <VerticalStackLayout Spacing="5">

                            <!-- Document Info -->
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" />
                            <Label Text="{Binding CreatedAt, StringFormat='Created: {0:yyyy-MM-dd HH:mm}'}" FontSize="12" TextColor="Gray"/>
                            <Label Text="{Binding SizeInKb}" FontSize="12" TextColor="Gray"/>

                            <!-- Buttons -->
                            <HorizontalStackLayout Spacing="10">
                                <Button Text="Delete" Clicked="OnDeletePdfClicked" CommandParameter="{Binding}" BackgroundColor="Tomato" TextColor="White" />
                                <Button Text="Send" Clicked="OnSendPdfClicked" CommandParameter="{Binding}" BackgroundColor="Teal" TextColor="White" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
