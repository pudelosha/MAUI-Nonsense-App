<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageToPdfPage"
             Title="Image to PDF">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>

            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Uniform page padding; both sections use the same extra 4dp gutter -->
    <Grid Padding="12" RowDefinitions="Auto,*" RowSpacing="12">

        <!-- Top card -->
        <Frame Grid.Row="0" Margin="6,0">
            <VerticalStackLayout Spacing="12">
                <Label Text="Create a new PDF from images, or manage your saved documents below."
                       FontSize="12"
                       TextColor="{StaticResource TextSecondary}" />
                <Button Text="New PDF"
                        Style="{StaticResource PillGrey}"
                        Clicked="OnNewPdfClicked" />
            </VerticalStackLayout>
        </Frame>

        <!-- List container: same gutter; allow shadows to overflow -->
        <Grid Grid.Row="1"
              Padding="4,0"
              IsClippedToBounds="False"
              BackgroundColor="Transparent">

            <CollectionView x:Name="PdfListView"
                            ItemsSource="{Binding PdfDocuments}"
                            SelectionMode="None"
                            BackgroundColor="Transparent">

                <CollectionView.EmptyView>
                    <!-- Card has no horizontal margin: width matches top card; shadow room comes from container padding -->
                    <Frame Margin="2,6">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="No PDFs yet"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}" />
                            <Label Text="Tap “New PDF” to create your first document."
                                   FontSize="12"
                                   TextColor="{StaticResource TextSecondary}" />
                        </VerticalStackLayout>
                    </Frame>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Same here: no horizontal margin; consistent spacing top/bottom -->
                        <Frame Margin="0,6">
                            <VerticalStackLayout Spacing="8">

                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource TextPrimary}" />

                                <Grid RowDefinitions="Auto,Auto">
                                    <Label Grid.Row="0"
                                           Text="{Binding CreatedAt, StringFormat='Created: {0:yyyy-MM-dd HH:mm}'}"
                                           FontSize="12"
                                           TextColor="{StaticResource TextSecondary}" />
                                    <Label Grid.Row="1"
                                           Text="{Binding SizeInKb}"
                                           FontSize="12"
                                           TextColor="{StaticResource TextSecondary}" />
                                </Grid>

                                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                                    <Button Grid.Column="0"
                                            Text="Delete"
                                            Style="{StaticResource PillGrey}"
                                            Clicked="OnDeletePdfClicked"
                                            CommandParameter="{Binding .}" />
                                    <Button Grid.Column="1"
                                            Text="Send"
                                            Style="{StaticResource PillGrey}"
                                            Clicked="OnSendPdfClicked"
                                            CommandParameter="{Binding .}" />
                                </Grid>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

    </Grid>
</ContentPage>
