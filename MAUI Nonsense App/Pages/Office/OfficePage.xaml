<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Nonsense_App.Pages.OfficePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Office">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- same pale-gray theme as Activity page -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="BorderCol">#E5E7EB</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>

            <!-- identical Frame styling to Activity page -->
            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">

            <!-- Image to PDF -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf1c1;"
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Image to PDF" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Capture or select images and save them as a PDF document."
                               FontSize="12" LineBreakMode="WordWrap" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageToPdfTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Image to Text -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf02d;"
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="Image to Text (OCR)" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Extract text content from an image using OCR."
                               FontSize="12" LineBreakMode="WordWrap" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageToTextTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- QR Code Scanner -->
            <Frame HeightRequest="110">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           Text="&#xf029;"
                           FontFamily="FASolid"
                           FontSize="42"
                           TextColor="{StaticResource TextSecondary}"
                           VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                        <Label Text="QR Code Scanner" FontSize="Medium" TextColor="{StaticResource TextPrimary}"/>
                        <Label Text="Scan QR codes using your camera."
                               FontSize="12" LineBreakMode="WordWrap" TextColor="{StaticResource TextSecondary}"/>
                    </VerticalStackLayout>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnQrScannerTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
