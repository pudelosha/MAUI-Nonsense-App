<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageArrangePage"
             Title="Arrange Pages">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Instruction -->
        <Label Grid.Row="0"
               Text="Reorder and edit pages before creating PDF."
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,0,0,10" />

        <!-- Scrollable List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="10">

                <CollectionView x:Name="ImagesCollectionView"
                                ItemsSource="{Binding Pages}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray"
                                   CornerRadius="8"
                                   Padding="10"
                                   Margin="0,5"
                                   HeightRequest="160">

                                <!-- Two equal columns -->
                                <Grid ColumnDefinitions="*,*"
                                      ColumnSpacing="15"
                                      VerticalOptions="CenterAndExpand">

                                    <!-- Image (left) -->
                                    <Image Source="{Binding FilePath}"
                                           WidthRequest="100"
                                           HeightRequest="140"
                                           Aspect="AspectFill"
                                           Grid.Column="0"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center" />

                                    <!-- Buttons (right) -->
                                    <Grid Grid.Column="1"
                                          RowDefinitions="Auto,Auto,Auto"
                                          VerticalOptions="CenterAndExpand"
                                          HorizontalOptions="FillAndExpand">

                                        <!-- Up -->
                                        <Border BackgroundColor="#512BD4"
                                                StrokeShape="RoundRectangle 8"
                                                Padding="8"
                                                Margin="0,0,0,10"
                                                Grid.Row="0"
                                                HorizontalOptions="FillAndExpand">
                                            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Label Text="&#xf062;" FontFamily="FASolid" FontSize="16" TextColor="White" />
                                                <Label Text="Up" TextColor="White" Margin="5,0,0,0" />
                                            </HorizontalStackLayout>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer 
                                                    CommandParameter="{Binding}"
                                                    Tapped="OnMoveUpTapped" />
                                            </Border.GestureRecognizers>
                                        </Border>

                                        <!-- Edit -->
                                        <Border BackgroundColor="#512BD4"
                                                StrokeShape="RoundRectangle 8"
                                                Padding="8"
                                                Margin="0,0,0,10"
                                                Grid.Row="1"
                                                HorizontalOptions="FillAndExpand">
                                            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Label Text="&#xf044;" FontFamily="FASolid" FontSize="16" TextColor="White" />
                                                <Label Text="Edit" TextColor="White" Margin="5,0,0,0" />
                                            </HorizontalStackLayout>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer 
                                                    CommandParameter="{Binding}"
                                                    Tapped="OnEditTapped" />
                                            </Border.GestureRecognizers>
                                        </Border>

                                        <!-- Down -->
                                        <Border BackgroundColor="#512BD4"
                                                StrokeShape="RoundRectangle 8"
                                                Padding="8"
                                                Grid.Row="2"
                                                HorizontalOptions="FillAndExpand">
                                            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Label Text="&#xf063;" FontFamily="FASolid" FontSize="16" TextColor="White" />
                                                <Label Text="Down" TextColor="White" Margin="5,0,0,0" />
                                            </HorizontalStackLayout>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer 
                                                    CommandParameter="{Binding}"
                                                    Tapped="OnMoveDownTapped" />
                                            </Border.GestureRecognizers>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Buttons -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              ColumnSpacing="10"
              Margin="0,10,0,0">

            <Button Text="Back"
                    Clicked="OnBackClicked"
                    Grid.Column="0"
                    BackgroundColor="Gray"
                    TextColor="White"
                    CornerRadius="8"
                    HorizontalOptions="Fill" />

            <Button Text="Next"
                    Clicked="OnNextClicked"
                    Grid.Column="1"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="8"
                    HorizontalOptions="Fill" />
        </Grid>
    </Grid>
</ContentPage>
