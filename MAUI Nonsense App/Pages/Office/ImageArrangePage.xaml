<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageArrangePage"
             Title="Arrange Pages">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Palette -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>
            <Color x:Key="InnerCardBg">White</Color>

            <!-- Shadowed outer cards -->
            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
                <Setter Property="Padding" Value="16" />
            </Style>

            <!-- Grey pill (default) -->
            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <!-- Grey pill (compact) -->
            <Style x:Key="PillGreySm" TargetType="Button" BasedOn="{StaticResource PillGrey}">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="14,10" />
            </Style>

            <!-- Inner item card: white, rounded, no border/shadow -->
            <Style x:Key="InnerCard" TargetType="Border">
                <Setter Property="StrokeShape" Value="RoundRectangle 12" />
                <Setter Property="Stroke" Value="{x:Null}" />
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="BackgroundColor" Value="{StaticResource InnerCardBg}" />
                <Setter Property="Padding" Value="12" />
                <Setter Property="Margin" Value="0,8" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!-- Grid makes the list area fill the remaining height -->
    <Grid Padding="10" RowDefinitions="Auto,*,Auto" RowSpacing="12" IsClippedToBounds="False">

        <!-- Top card: instruction -->
        <Frame Grid.Row="0" Margin="6,0">
            <VerticalStackLayout Spacing="6">
                <Label Text="Reorder and edit pages before creating the PDF."
                       FontSize="12"
                       TextColor="{StaticResource TextSecondary}" />
            </VerticalStackLayout>
        </Frame>

        <!-- Bottom card: holds the reorderable list -->
        <Frame Grid.Row="1"
               Margin="6,0"
               VerticalOptions="FillAndExpand">
            <Grid IsClippedToBounds="False">

                <CollectionView x:Name="ImagesCollectionView"
                                ItemsSource="{Binding Pages}"
                                SelectionMode="None"
                                VerticalOptions="FillAndExpand"
                                BackgroundColor="Transparent">

                    <CollectionView.EmptyView>
                        <Grid RowDefinitions="*"
                              ColumnDefinitions="*"
                              HorizontalOptions="Fill"
                              VerticalOptions="Fill">
                            <VerticalStackLayout Spacing="6"
                                                 HorizontalOptions="Center"
                                                 VerticalOptions="Center">
                                <Label Text="No pages yet"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource TextPrimary}" />
                                <Label Text="Add images on the previous screen."
                                       FontSize="12"
                                       TextColor="{StaticResource TextSecondary}" />
                            </VerticalStackLayout>
                        </Grid>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- White rounded inner card -->
                            <Border Style="{StaticResource InnerCard}">
                                <!-- Three columns: thumbnail / details / vertical buttons -->
                                <Grid ColumnDefinitions="Auto,*,Auto"
                                      RowDefinitions="Auto,Auto"
                                      ColumnSpacing="12"
                                      RowSpacing="6">

                                    <!-- Thumbnail -->
                                    <Image Grid.RowSpan="2"
                                           Source="{Binding FilePath}"
                                           WidthRequest="72"
                                           HeightRequest="98"
                                           Aspect="AspectFill" />

                                    <!-- Details -->
                                    <VerticalStackLayout Grid.Column="1" Grid.RowSpan="2" Spacing="4">
                                        <!-- Smaller filename -->
                                        <Label Text="{Binding FileName}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               LineBreakMode="WordWrap"
                                               TextColor="{StaticResource TextPrimary}" />
                                        <!-- Date above size (stacked) -->
                                        <VerticalStackLayout Spacing="2">
                                            <Label Text="{Binding DisplayDate}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource TextSecondary}" />
                                            <Label Text="{Binding DisplaySize}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource TextSecondary}" />
                                        </VerticalStackLayout>
                                    </VerticalStackLayout>

                                    <!-- Actions: stacked -->
                                    <VerticalStackLayout Grid.Column="2" Grid.RowSpan="2"
                                                         Spacing="8"
                                                         VerticalOptions="Center"
                                                         HorizontalOptions="End">
                                        <Button Text="Up"
                                                Style="{StaticResource PillGreySm}"
                                                Clicked="OnMoveUpClicked" />
                                        <Button Text="Edit"
                                                Style="{StaticResource PillGreySm}"
                                                Clicked="OnEditClicked" />
                                        <Button Text="Down"
                                                Style="{StaticResource PillGreySm}"
                                                Clicked="OnMoveDownClicked" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>
            </Grid>
        </Frame>

        <!-- Bottom actions -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12" Margin="5,0">
            <Button Grid.Column="0"
                    Text="Back"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnBackClicked" />
            <Button Grid.Column="1"
                    Text="Next"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnNextClicked" />
        </Grid>

    </Grid>
</ContentPage>
