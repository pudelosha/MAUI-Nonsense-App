<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageArrangePage"
             Title="Arrange Pages">

    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- Instruction -->
        <Label Text="Reorder and edit pages before creating PDF."
               FontAttributes="Bold"
               FontSize="14" />

        <!-- Image list -->
        <CollectionView x:Name="ImagesCollectionView"
                        ItemsSource="{Binding Pages}"
                        SelectionMode="None"
                        VerticalOptions="FillAndExpand">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray"
                           CornerRadius="8"
                           Padding="10"
                           Margin="0,5">

                        <Grid ColumnDefinitions="Auto,*"
                              ColumnSpacing="10"
                              VerticalOptions="Center">

                            <!-- Image preview (left) -->
                            <Image Source="{Binding FilePath}"
                                   WidthRequest="100"
                                   HeightRequest="140"
                                   Aspect="AspectFill"
                                   Grid.Column="0" />

                            <!-- Controls (right) -->
                            <VerticalStackLayout Grid.Column="1"
                                                 VerticalOptions="Center"
                                                 Spacing="5"
                                                 HorizontalOptions="End">

                                <Button Text="Up"
                                        Clicked="OnMoveUpClicked"
                                        CommandParameter="{Binding}"
                                        WidthRequest="80" />

                                <Button Text="Edit"
                                        Clicked="OnEditClicked"
                                        CommandParameter="{Binding}"
                                        WidthRequest="80" />

                                <Button Text="Down"
                                        Clicked="OnMoveDownClicked"
                                        CommandParameter="{Binding}"
                                        WidthRequest="80" />
                            </VerticalStackLayout>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Continue -->
        <Button Text="Next"
                Clicked="OnNextClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="8"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>
