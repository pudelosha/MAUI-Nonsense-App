<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageArrangePage"
             Title="Arrange Pages">

    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- Instruction -->
        <Label Text="Reorder and edit pages before creating PDF."
               FontAttributes="Bold"
               FontSize="16" />

        <!-- Image list -->
        <CollectionView x:Name="ImagesCollectionView"
                        ItemsSource="{Binding Session.Pages}"
                        SelectionMode="None"
                        HeightRequest="500">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10" BorderColor="LightGray">
                        <VerticalStackLayout>

                            <!-- Preview -->
                            <Image Source="{Binding FilePath}" HeightRequest="200" Aspect="AspectFill" />

                            <!-- Controls -->
                            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Button Text="Up" Clicked="OnMoveUpClicked" CommandParameter="{Binding}" />
                                <Button Text="Down" Clicked="OnMoveDownClicked" CommandParameter="{Binding}" />
                                <Button Text="Edit" Clicked="OnEditClicked" CommandParameter="{Binding}" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Continue -->
        <Button Text="Next"
                Clicked="OnNextClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                CornerRadius="8"
                HorizontalOptions="Fill" />

    </VerticalStackLayout>
</ContentPage>
