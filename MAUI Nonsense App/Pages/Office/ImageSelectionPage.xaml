<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:helpers="clr-namespace:MAUI_Nonsense_App.Helpers"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageSelectionPage"
             Title="Select Images">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <helpers:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />

            <!-- Palette -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>

            <!-- Card frame: soft shadow, no border -->
            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
                <Setter Property="Padding" Value="16" />
            </Style>

            <!-- Grey pill buttons (default size) -->
            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <!-- Smaller grey pill (for header actions) -->
            <Style x:Key="PillGreySm" TargetType="Button" BasedOn="{StaticResource PillGrey}">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="14,10" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="8" RowDefinitions="Auto,*,Auto" RowSpacing="16">

        <!-- Top card: actions + hint -->
        <Frame Grid.Row="0" Margin="8,0">
            <VerticalStackLayout Spacing="12">
                <Label Text="Pick images from your gallery or take a new photo. You can reorder and crop them later."
                       FontSize="12"
                       TextColor="{StaticResource TextSecondary}" />
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <Button Grid.Column="0"
                            Text="Take Photo"
                            Style="{StaticResource PillGreySm}"
                            Clicked="OnTakePhotoClicked" />
                    <Button Grid.Column="1"
                            Text="Pick from Gallery"
                            Style="{StaticResource PillGreySm}"
                            Clicked="OnPickPhotosClicked" />
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <!-- Selected images list (scrolls itself) -->
        <CollectionView Grid.Row="1"
                        x:Name="SelectedImagesView"
                        ItemsSource="{Binding SelectedImages}"
                        SelectionMode="None">

            <CollectionView.EmptyView>
                <!-- Give the empty card horizontal margin so its shadow isn't clipped -->
                <Frame Margin="8,4">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="No images selected"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}" />
                        <Label Text="Use the buttons above to add images."
                               FontSize="12"
                               TextColor="{StaticResource TextSecondary}" />
                    </VerticalStackLayout>
                </Frame>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Add horizontal margin so the drop shadow has room -->
                    <Frame Margin="8,4">
                        <Grid ColumnDefinitions="Auto,*,Auto"
                              RowDefinitions="Auto,Auto"
                              ColumnSpacing="12"
                              RowSpacing="6">

                            <!-- Thumbnail -->
                            <Image Grid.RowSpan="2"
                                   Source="{Binding FilePath}"
                                   WidthRequest="64"
                                   HeightRequest="86"
                                   Aspect="AspectFill" />

                            <!-- File name -->
                            <Label Grid.Column="1" Grid.Row="0"
                                   Text="{Binding FileName}"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextPrimary}" />

                            <!-- Meta -->
                            <HorizontalStackLayout Grid.Column="1" Grid.Row="1" Spacing="12">
                                <Label Text="{Binding DisplayDate}"
                                       FontSize="12"
                                       TextColor="{StaticResource TextSecondary}" />
                                <Label Text="{Binding DisplaySize}"
                                       FontSize="12"
                                       TextColor="{StaticResource TextSecondary}" />
                            </HorizontalStackLayout>

                            <!-- Remove -->
                            <Button Grid.Column="2" Grid.RowSpan="2"
                                    Text="Remove"
                                    Style="{StaticResource PillGrey}"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnDeleteClicked"
                                    VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Bottom actions -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12">
            <Button Grid.Column="0"
                    Text="Back"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnBackClicked" />
            <Button Grid.Column="1"
                    Text="Next"
                    Style="{StaticResource PillGrey}"
                    IsEnabled="{Binding SelectedImages.Count, Converter={StaticResource GreaterThanZeroConverter}}"
                    Clicked="OnNextClicked" />
        </Grid>
    </Grid>
</ContentPage>
