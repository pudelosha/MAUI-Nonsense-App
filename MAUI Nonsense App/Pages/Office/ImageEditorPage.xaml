<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageEditorPage"
             Title="Edit Image">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Palette (same as other screens) -->
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>
            <Color x:Key="TextPrimary">#111827</Color>

            <!-- Outer card -->
            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

            <!-- Pills -->
            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <!-- Transparent inner surface (no white box behind the photo) -->
            <Style x:Key="InnerSurface" TargetType="Border">
                <Setter Property="StrokeShape" Value="RoundRectangle 12" />
                <Setter Property="StrokeThickness" Value="0" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <!-- A bit of padding so the user can easily grab the handles -->
                <Setter Property="Padding" Value="8" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="10" RowDefinitions="Auto,*,Auto" RowSpacing="12" IsClippedToBounds="False">

        <!-- Instructions -->
        <Frame Grid.Row="0" Margin="6,0">
            <Label Text="Drag the 4 green dots to adjust the page frame."
                   FontSize="12"
                   TextColor="{StaticResource TextSecondary}" />
        </Frame>

        <!-- Image area (fills) -->
        <Frame Grid.Row="1" Margin="6,0" VerticalOptions="FillAndExpand">
            <Border Style="{StaticResource InnerSurface}">
                <Grid>
                    <Image x:Name="EditableImage"
                           Aspect="AspectFit"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill" />
                    <GraphicsView x:Name="Overlay"
                                  BackgroundColor="Transparent"
                                  HorizontalOptions="Fill"
                                  VerticalOptions="Fill"
                                  InputTransparent="False" />
                </Grid>
            </Border>
        </Frame>

        <!-- Actions -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12" Margin="5,0">
            <Button Text="Cancel"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnCancelClicked" />
            <Button Grid.Column="1"
                    Text="Save"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnSaveClicked" />
        </Grid>
    </Grid>
</ContentPage>
