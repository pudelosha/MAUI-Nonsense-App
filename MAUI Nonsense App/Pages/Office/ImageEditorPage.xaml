<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageEditorPage"
             Title="Edit Image">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto" RowSpacing="15">

        <!-- Instructions -->
        <Label Grid.Row="0"
               Text="Drag the 4 green dots to adjust the page frame"
               FontAttributes="Bold"
               FontSize="16"
               HorizontalOptions="Center" />

        <!-- Image + overlay share the SAME Border (padding & clipping) -->
        <Border Grid.Row="1"
                Stroke="Gray"
                StrokeThickness="1"
                Padding="5"
                BackgroundColor="Transparent">  <!-- optional -->
            <Grid>
                <Image x:Name="EditableImage"
                       Aspect="AspectFit"
                       HeightRequest="400" />
                <GraphicsView x:Name="Overlay"
                              InputTransparent="False"
                              HorizontalOptions="Fill"
                              VerticalOptions="Fill"
                              BackgroundColor="Transparent" />
            </Grid>
        </Border>

        <!-- Actions -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12">
            <Button Text="Cancel"
                    Clicked="OnCancelClicked"
                    BackgroundColor="#666"
                    TextColor="White"
                    CornerRadius="8"
                    HorizontalOptions="Fill" />
            <Button Grid.Column="1"
                    Text="Save"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="8"
                    HorizontalOptions="Fill" />
        </Grid>

    </Grid>
</ContentPage>
