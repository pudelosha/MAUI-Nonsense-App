<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Nonsense_App.Pages.Office.ImageEditorPage"
             Title="Edit Image">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="BtnBg">#E5E7EB</Color>
            <Color x:Key="TextPrimary">#111827</Color>

            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

            <Style x:Key="PillGrey" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource BtnBg}" />
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
                <Setter Property="CornerRadius" Value="16" />
                <Setter Property="Padding" Value="18,12" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="10" RowDefinitions="Auto,*,Auto" RowSpacing="12" IsClippedToBounds="False">

        <Frame Grid.Row="0" Margin="6,0">
            <Label Text="Drag the 4 green dots to adjust the page frame."
                   FontSize="12"
                   TextColor="{StaticResource TextSecondary}" />
        </Frame>

        <!-- IMPORTANT: no padding on the Frame; no clipping anywhere -->
        <Frame Grid.Row="1"
               Margin="6,0"
               Padding="0"
               IsClippedToBounds="False"
               VerticalOptions="FillAndExpand">
            <Grid x:Name="ImageHost"
                  Padding="50"
                BackgroundColor="Transparent"
                  IsClippedToBounds="False">
                <Image x:Name="EditableImage"
                       Aspect="AspectFit"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill" />
                <GraphicsView x:Name="Overlay"
                              BackgroundColor="Transparent"
                              HorizontalOptions="Fill"
                              VerticalOptions="Fill"
                              InputTransparent="False" />
            </Grid>
        </Frame>

        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="12" Margin="5,0">
            <Button Text="Cancel"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnCancelClicked" />
            <Button Grid.Column="1"
                    Text="Save"
                    Style="{StaticResource PillGrey}"
                    Clicked="OnSaveClicked" />
        </Grid>
    </Grid>
</ContentPage>
