<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Nonsense_App.Pages.Activity.ActivityReportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Report">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="CardBg">#F3F4F6</Color>
            <Color x:Key="TextPrimary">#111827</Color>
            <Color x:Key="TextSecondary">#6B7280</Color>
            <Color x:Key="ArrowEnabled">#9CA3AF</Color>
            <Color x:Key="ArrowDisabled">#D1D5DB</Color>

            <Style TargetType="Frame">
                <Setter Property="HasShadow" Value="True"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="BackgroundColor" Value="{StaticResource CardBg}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

            <Style x:Key="ArrowBtn" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Padding" Value="6" />
                <Setter Property="TextColor" Value="{StaticResource ArrowEnabled}" />
            </Style>

            <Style x:Key="PillButton" TargetType="Button">
                <Setter Property="CornerRadius" Value="18"/>
                <Setter Property="Padding" Value="16,10"/>
                <Setter Property="BackgroundColor" Value="#E5E7EB"/>
                <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="16" RowSpacing="16">

        <!-- RANGE SELECTOR (unchanged) -->
        <Grid Grid.Row="0" ColumnDefinitions="*,*,*" ColumnSpacing="10">
            <Button Grid.Column="0" Text="DAY"
                    Style="{StaticResource PillButton}"
                    Command="{Binding SetRangeCommand}" CommandParameter="Day">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding SelectedRange}" Value="Day">
                        <Setter Property="BackgroundColor" Value="#D1D5DB"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Column="1" Text="WEEK"
                    Style="{StaticResource PillButton}"
                    Command="{Binding SetRangeCommand}" CommandParameter="Week">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding SelectedRange}" Value="Week">
                        <Setter Property="BackgroundColor" Value="#D1D5DB"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Column="2" Text="MONTH"
                    Style="{StaticResource PillButton}"
                    Command="{Binding SetRangeCommand}" CommandParameter="Month">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding SelectedRange}" Value="Month">
                        <Setter Property="BackgroundColor" Value="#D1D5DB"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
        </Grid>

        <!-- HEADER CARD: two centered columns + navigation row -->
        <Frame Grid.Row="1">
            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" ColumnSpacing="12">

                <!-- Left column = Total -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="2" HorizontalOptions="Center">
                    <Label Text="{Binding LeftLabel}"
                           FontSize="12"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource TextSecondary}" />
                    <Label Text="{Binding LeftValueText}"
                           FontSize="22" FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource TextPrimary}" />
                </VerticalStackLayout>

                <!-- Right column = Average -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="2" HorizontalOptions="Center">
                    <Label Text="{Binding RightLabel}"
                           FontSize="12"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource TextSecondary}" />
                    <Label Text="{Binding RightValueText}"
                           FontSize="22" FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="{StaticResource TextPrimary}" />
                </VerticalStackLayout>

                <!-- Navigation row -->
                <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                    <Button Grid.Column="0" Text="◀" Style="{StaticResource ArrowBtn}"
                            Clicked="Prev_Clicked"/>
                    <Label  Grid.Column="1" Text="{Binding RangeText}"
                            HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                            TextColor="{StaticResource TextSecondary}" />
                    <Button Grid.Column="2" Text="▶" Style="{StaticResource ArrowBtn}"
                            Clicked="Next_Clicked" IsEnabled="{Binding CanGoForward}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding CanGoForward}" Value="False">
                                <Setter Property="TextColor" Value="{StaticResource ArrowDisabled}" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
            </Grid>
        </Frame>

        <!-- CHART (unchanged) -->
        <Frame Grid.Row="2" Padding="12" x:Name="ChartCard">
            <GraphicsView x:Name="Chart"
                          BackgroundColor="#01000000"
                          HorizontalOptions="Fill"
                          VerticalOptions="FillAndExpand">
                <GraphicsView.GestureRecognizers>
                    <SwipeGestureRecognizer Direction="Left"  Swiped="OnChartSwipedLeft"/>
                    <SwipeGestureRecognizer Direction="Right" Swiped="OnChartSwipedRight"/>
                    <PanGestureRecognizer PanUpdated="OnChartPanUpdated"/>
                </GraphicsView.GestureRecognizers>
            </GraphicsView>
        </Frame>

        <!-- METRIC SELECTOR (unchanged) -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
            <Button Grid.Column="0" Text="STEPS"
                    Style="{StaticResource PillButton}"
                    Command="{Binding SetModeCommand}" CommandParameter="Steps">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding SelectedMode}" Value="Steps">
                        <Setter Property="BackgroundColor" Value="#D1D5DB"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Column="1" Text="CALORIES"
                    Style="{StaticResource PillButton}"
                    Command="{Binding SetModeCommand}" CommandParameter="Calories">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding SelectedMode}" Value="Calories">
                        <Setter Property="BackgroundColor" Value="#D1D5DB"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Column="2" Text="TIME"
                    Style="{StaticResource PillButton}"
                    Command="{Binding SetModeCommand}" CommandParameter="Time">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding SelectedMode}" Value="Time">
                        <Setter Property="BackgroundColor" Value="#D1D5DB"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Column="3" Text="DISTANCE"
                    Style="{StaticResource PillButton}"
                    Command="{Binding SetModeCommand}" CommandParameter="Distance">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" Binding="{Binding SelectedMode}" Value="Distance">
                        <Setter Property="BackgroundColor" Value="#D1D5DB"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
        </Grid>

    </Grid>
</ContentPage>
